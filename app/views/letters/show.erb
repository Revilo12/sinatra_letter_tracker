<ul>
  <li>Sent to <%= @letter.recipient.name %> on <%= @letter.recipient.address %></li>
  <li><%= @letter.date_sent_string %></li>
  <li><%= @letter.date_received_string %></li>
  <li>Notes: <%= @letter.notes %></li>
</ul>
<form method="post" action="/letters/<%=@letter.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Letter">
</form>
<form action='/letters/<%= @letter.id %>/edit' method="get">
  <input type='submit' id="Edit Letter" name="Edit Letter" value="Edit Letter">
</form>
